<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render 'shared/flash', flash: flash if flash %>
  <%= f.error_notification message: nil %>

  <div class="form-inputs">
    <%= f.input :email, required: true, label: false, autofocus: true, placeholder: 'Email' %>
    <%= f.input :password, required: true, label: false, placeholder: 'Password' %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Sign up" %>
  </div>
<% end %>
<div id='link-wrapper'>
  <div id='link-container'>
    <%= render "devise/shared/links" %>
  </div>
</div>
